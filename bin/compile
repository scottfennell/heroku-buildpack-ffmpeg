#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ffmpeg"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="https://raw.githubusercontent.com/scottfennell/heroku-buildpack-ffmpeg/master/data/ffmpeg-2.4.3-64bit-static.tar.xz"
echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
curl -L --silent $DOWNLOAD_URL | tar -xJ

echo "exporting PATH and LIBRARY_PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/ffmpeg.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:/app/vendor/ffmpeg-2.4.3-64bit-static"' >> $PROFILE_PATH
